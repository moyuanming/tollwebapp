<% provide(:title, "Sign in") %>
<div class="row ">
  <div class="col-xs-6 col-sm-4"></div>
  <div class="col-xs-6 col-sm-4">
    <h1>Sign in </h1>
    <div class="form-horizontal" >

      <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :email ,class: "form-control" ,placeholder: "Email" %></div>
      </div>
      <div class="form-group">
        <%= f.label :password ,class: "col-sm-2 control-label"  %>
        <div class="col-sm-10">
          <%= f.password_field :password ,class: "form-control" ,placeholder: "Password"%></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>
          <p>
          New user?<%= link_to "Sign up now!", signup_path %></p>
      </div>
      <% end %>
    
        
    </div>

    
  </div>
</div>