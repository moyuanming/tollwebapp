<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= render 'layouts/shim' %>
  </head>
  <body>
  	 <%= render 'layouts/header' %>
     <% if signed_in? %>
     <div class="row">
     <aside class="span1">
     </aside>
      <aside class="span3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
         <section>
        <%= link_to "收费片区信息" , pianqudaimas_path %>
      </section>
      <section>
        <%= link_to "公路局信息" , gljdaimas_path %>
      </section>
        <section>
        <%= link_to "收费站信息" , tollstations_path %>
      </section>
    </aside>
    <aside class="span8">

    <div class="container">
     <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
    </aside>
    </div>
    <% else %>
      <div class="container"> 
      <%= yield %>
    <% end %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>